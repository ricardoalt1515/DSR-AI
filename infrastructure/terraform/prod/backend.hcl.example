# ============================================================================
# Terraform Backend Configuration (S3)
# ============================================================================
# Copy this file to backend.hcl and fill in your values
# NEVER commit backend.hcl to git (contains sensitive info)
# ============================================================================

# S3 bucket for Terraform state
bucket = "dsr-waste-terraform-state-prod"

# State file key (path within bucket)
key = "prod/terraform.tfstate"

# AWS region
region = "us-east-1"

# DynamoDB table for state locking
dynamodb_table = "dsr-waste-terraform-locks"

# Encryption
encrypt = true

# ============================================================================
# Setup Instructions
# ============================================================================
# 1. Create S3 bucket:
#    aws s3 mb s3://dsr-waste-terraform-state-prod --region us-east-1
#
# 2. Enable versioning:
#    aws s3api put-bucket-versioning \
#      --bucket dsr-waste-terraform-state-prod \
#      --versioning-configuration Status=Enabled
#
# 3. Create DynamoDB table for locking:
#    aws dynamodb create-table \
#      --table-name dsr-waste-terraform-locks \
#      --attribute-definitions AttributeName=LockID,AttributeType=S \
#      --key-schema AttributeName=LockID,KeyType=HASH \
#      --billing-mode PAY_PER_REQUEST \
#      --region us-east-1
#
# 4. Initialize Terraform with backend:
#    terraform init -backend-config=backend.hcl
# ============================================================================
